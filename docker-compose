version: "3.5"

# Docker Volumes
volumes:
    papermc_data:
        name: server

# Docker services
services:
    # Paper MC
    minecraft-server:
        image: itzg/minecraft-server
        environment:
            EULA: "true"
            TYPE: PAPER
            VERSION: 1.19.2
            # needed for Paper versions before 1.14
            CONSOLE: "false"
            ONLINE_MODE: "false"
            GAMEMODE: "survival"
            DIFFICULTY: "normal"

        container_name: minecraft-server
        restart: always
        tty: true
        stdin_open: true
        volumes:
            - ./minecraft-server:/data

        ports:
            - "25565:25565"

        dns:
          - 1.1.1.1
          - 1.0.0.1
